

<div class="container">
  <h2>{{post.headline}}</h2>
  <p>{{post.body}}</p>
  <h4>--{{post.user.name}}, posted {{format_date post.date_created}}</h4>
  {{#each post.comments as |comment|}}
  <h5>{{comment.body}}</h5>
  <h6>{{user.name}}, commented {{format_date comment.date_created}}</h6>
  {{/each}}
</div>
<div class="container mt-5">
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment">Comment:</label>
      <input class="form-input" type="text id" id="comment-body" name="comment-body" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Share Comment</button>
    </div>
  </form>
</div>

<script src="./js/post.js"></script>
<script src="./js/comment.js"></script>